<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostJobActivity">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pic2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/post_job_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="54dp"
        android:fontFamily="sans-serif-medium"
        android:text="Post a Job"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/title_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#AAB8C2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_job_title"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/post_job_card_bg"
        android:paddingBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_divider">

        <EditText
            android:id="@+id/job_title_input"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/post_job_input_bg"
            android:hint="💼 Job Title"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:importantForAutofill="no"
            android:inputType="text" />

        <EditText
            android:id="@+id/job_description_input"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/post_job_input_bg"
            android:hint="📝 Job Description"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="@id/job_title_input"
            app:layout_constraintStart_toStartOf="@id/job_title_input"
            app:layout_constraintTop_toBottomOf="@id/job_title_input"
            android:importantForAutofill="no"
            android:inputType="text" />

        <EditText
            android:id="@+id/payment_input"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/post_job_input_bg"
            android:hint="💰 Payment (Rs.)"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="@id/job_description_input"
            app:layout_constraintStart_toStartOf="@id/job_description_input"
            app:layout_constraintTop_toBottomOf="@id/job_description_input"
            android:importantForAutofill="no"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/date_input"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/post_job_input_bg"
            android:hint="📅 Date Required"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="@id/payment_input"
            app:layout_constraintStart_toStartOf="@id/payment_input"
            app:layout_constraintTop_toBottomOf="@id/payment_input"
            android:importantForAutofill="no"
            android:inputType="date" />

        <EditText
            android:id="@+id/duration_input"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/post_job_input_bg"
            android:hint="🕐 Duration"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="@id/date_input"
            app:layout_constraintStart_toStartOf="@id/date_input"
            app:layout_constraintTop_toBottomOf="@id/date_input"
            android:importantForAutofill="no"
            android:inputType="text" />

        <EditText
            android:id="@+id/location_input"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/post_job_input_bg"
            android:hint="📍 Job Location"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="@id/duration_input"
            app:layout_constraintStart_toStartOf="@id/duration_input"
            app:layout_constraintTop_toBottomOf="@id/duration_input"
            android:importantForAutofill="no"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/location_input"
            app:layout_constraintStart_toStartOf="@id/location_input"
            app:layout_constraintTop_toBottomOf="@id/location_input">

            <TextView
                android:id="@+id/part_time_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/post_job_tag_button_bg"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Part-time"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/daily_wage_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/post_job_tag_button_bg"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Daily Wage"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/contract_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/post_job_tag_button_bg"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Contract"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 